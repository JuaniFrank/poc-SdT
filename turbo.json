{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": [".next/**", "!.next/cache/**"]
      },
      "check-types": {
        "dependsOn": ["^check-types"]
      },
      "start:prod": {
        "persistent": true,
        "cache": false
      },
      "start": {
        "persistent": true,
        "cache": false
      },
      "api:start": {
        "persistent": true,
        "cache": false
      },
      "client:start": {
        "persistent": true,
        "cache": false
      }
    }
  }